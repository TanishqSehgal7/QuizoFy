<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CategoryFragment">
    <TextView
        android:id="@+id/categorytv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CATEGORIES"
        android:textStyle="bold"
        android:padding="10dp"
        android:background="@drawable/bottomavcustom"
        android:textColor="@android:color/black"
        android:textSize="35sp"
        android:layout_margin="10dp"
        android:textAlignment="center"/>

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="80dp"
        android:clipToPadding="false">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <Button
                android:id="@+id/c1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Art and Literature"
                android:textSize="30dp"
                android:textStyle="italic"
                android:textColor="@android:color/white"
                android:foreground="?android:attr/selectableItemBackground"
                android:background="@drawable/buttonroundforcategories"
                android:layout_margin="10dp"
                android:onClick="startQuiz1"
                android:padding="10dp"/>

            <Button
                android:id="@+id/c2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Geography"
                android:textSize="30dp"
                android:textStyle="italic"
                android:textColor="@android:color/white"
                android:background="@drawable/buttonroundforcategories"
                android:foreground="?android:attr/selectableItemBackground"
                android:layout_margin="10dp"
                android:onClick="startQuiz2"
                android:padding="10dp"/>

            <Button
                android:id="@+id/c3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="General Knowledge"
                android:textSize="30dp"
                android:textStyle="italic"
                android:textColor="@android:color/white"
                android:background="@drawable/buttonroundforcategories"
                android:foreground="?android:attr/selectableItemBackground"
                android:layout_margin="10dp"
                android:onClick="startQuiz3"
                android:padding="10dp"/>

            <Button
                android:id="@+id/c4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="History"
                android:textSize="30dp"
                android:textStyle="italic"
                android:textColor="@android:color/white"
                android:background="@drawable/buttonroundforcategories"
                android:foreground="?android:attr/selectableItemBackground"
                android:layout_margin="10dp"
                android:onClick="startQuiz4"
                android:padding="10dp"/>

            <Button
                android:id="@+id/c5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Technology"
                android:textSize="30dp"
                android:textStyle="italic"
                android:textColor="@android:color/white"
                android:background="@drawable/buttonroundforcategories"
                android:foreground="?android:attr/selectableItemBackground"
                android:layout_margin="10dp"
                android:onClick="startQuiz5"
                android:padding="10dp"/>

            <Button
                android:id="@+id/c6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sports"
                android:textSize="30dp"
                android:textStyle="italic"
                android:textColor="@android:color/white"
                android:background="@drawable/buttonroundforcategories"
                android:foreground="?android:attr/selectableItemBackground"
                android:layout_margin="10dp"
                android:onClick="startQuiz6"
                android:padding="10dp"/>

            <Button
                android:id="@+id/c7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Entertainment"
                android:textSize="30dp"
                android:textStyle="italic"
                android:textColor="@android:color/white"
                android:background="@drawable/buttonroundforcategories"
                android:foreground="?android:attr/selectableItemBackground"
                android:layout_margin="10dp"
                android:onClick="startQuiz7"
                android:padding="10dp"/>

            <Button
                android:id="@+id/c8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Music"
                android:textSize="30dp"
                android:textStyle="italic"
                android:textColor="@android:color/white"
                android:background="@drawable/buttonroundforcategories"
                android:foreground="?android:attr/selectableItemBackground"
                android:layout_margin="10dp"
                android:onClick="startQuiz8"
                android:padding="10dp"/>

            <Button
                android:id="@+id/c9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sneaker Culture"
                android:textSize="30dp"
                android:textStyle="italic"
                android:textColor="@android:color/white"
                android:background="@drawable/buttonroundforcategories"
                android:foreground="?android:attr/selectableItemBackground"
                android:layout_margin="10dp"
                android:onClick="startQuiz9"
                android:padding="10dp"/>

            <Button
                android:id="@+id/c10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Politics"
                android:textSize="30dp"
                android:textStyle="italic"
                android:textColor="@android:color/white"
                android:background="@drawable/buttonroundforcategories"
                android:foreground="?android:attr/selectableItemBackground"
                android:layout_margin="10dp"
                android:onClick="startQuiz10"
                android:padding="10dp"/>

        </LinearLayout>
    </ScrollView>


</RelativeLayout>